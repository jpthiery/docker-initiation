---
- hosts: all
  remote_user: ubuntu
  sudo: yes
  tasks:
  - name: Install docker
    apt: name=docker.io state=present
  - name: Add ubuntu to docker group
    user: name=ubuntu groups=docker
  - name: Set up authorized_keys for the admin user
    authorized_key: user=ubuntu
                    key="{{ lookup('file',item) }}"
    with_fileglob:
    - public_keys/*.pub
